# Frontend and shared environment variables
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_ACCESS_KEY_ID=your_aws_access_key
NEXT_PUBLIC_AWS_SECRET_ACCESS_KEY=your_aws_secret_key
NEXT_PUBLIC_S3_BUCKET_NAME=your_s3_bucket_name

# Backend MongoDB config
MONGODB_URI=mongodb://localhost:27017/ats-system

# Backend server config
PORT=5001

# Firebase Admin SDK config (for backend authentication)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Frontend API URL (if deploying backend separately)
NEXT_PUBLIC_API_URL=http://localhost:5001/api 